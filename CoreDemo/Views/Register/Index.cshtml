@model EntityLayer.Concrete.Writer







<!--Burası kayıt ol sayfası RegisterControllden oluşan ındex isimli view
	RegisterControllede üye ekleme işlemi yapılacağı için writer entitisi ve
	insert fonksiyonu kullanılacak

	-Fluent Validation İşlemi:Veri tabanına bir kişiyi kaydeterken girdiği bilgilerin 
     doğruluğun sağlamak için uygulanan yöntemlerdir.
	 BusinessLayer'da nuget Managerden FluentValidation ve FluentValidation Asp.NetCore 
	 eklentisini kurduk
-->

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<!--pop up kullanımı için açılır pencere yapmaya yarıyo mesela kullanıcı sözleşmesi 
	yeni sayfada değilde bir box içinde gelio bunu https://sweetalert.js.org/guides/ sitesinden
	isteğimiz UI'a göre alabiliriz.	
-->
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<a href="~/lib/jquery/dist/jquery.min.map"></a>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>


<!--Validation Kısmından sonra formumuzu yerine textbox kullanırız yani html yerine c# ile 
	inputları alırız.Böylece validation işlemleri sağlanmış olur
-->

<section class="main-content-w3layouts-agileits">
	
	<div class="container">
		<h3 class="tittle">Kayıt Ol</h3>
		<div class="inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">

				<!--form tagı yerine kullanılıyor.-->
				@using(Html.BeginForm("Index","Register",FormMethod.Post))
				{
					<div class="form-row">
						<div class="col-md-6 mb-3">
							<label for="validationCustom01" >Adınız Soyadınız</label>
																<!--new den sonrası tasarım için-->
							@Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
							@Html.ValidationMessageFor(x => x.WriterName,"", new { @class="text-danger" }) @*New sonrası kırmızı renk tasarımı*@

						<!--WriterName'ye göre ekliycez veri tabanına name kısmını kendimiz yazdık -->
							<!--input tagları yerine textBox kullandık validation işlemlerinin sağlanması için-->
							@* <input type="text" class="form-control" id="validationDefault01" name="WriterName" placeholder=""  required="" > *@
						</div>
						<div class="col-md-6 mb-3">
							<label for="validationCustom02">Mail Adresiniz</label>

							@Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
							@Html.ValidationMessageFor(x => x.WriterMail, "", new { @class = "text-danger" })
							<!--name yerini kendimiz ekledik WriterMail'e tabloya mail adresi eklenir-->
							@* <input type="email" class="form-control" name="WriterMail" id="validationDefault02" placeholder="" required=""> *@
						</div>
					</div>
					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="exampleInputPassword1 mb-2">Şifre</label>
							@Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control" })
							@Html.ValidationMessageFor(x => x.WriterPassword, "", new { @class = "text-danger" })
							<!--name kısmını kendimiz Ekledik tabloda WriterPassword kısmına şifre eklenir-->
							@* <input type="password" class="form-control"name="WriterPassword"id="password1" placeholder="" required=""> *@
						</div>
					

						<div class="form-group col-md-6">
							<label for="exampleInputPassword2 mb-2">Görsel Dosya Yolu</label>


							@Html.TextBoxFor(x => x.WriterImage, new { @class = "form-control" })
							@Html.ValidationMessageFor(x => x.WriterImage, "", new { @class = "text-danger" })
							@* <input type="text" class="form-control" name="WriterImage" id="password2" placeholder="" required="" > *@
						</div>

					</div>
					<button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
					<p>
						<a href="#" id ="btn1" >Tüm şartları okudum, kabul ediyorum.</a>
						<!--idyi kendimiz verdik bu link tetiklendiğinde aşağıdaki
							fonksiyon çalışır.
						-->
					</p>
				}
			</div>
		</div>
	</div>
	
	<br/>

	<!--<button class="btn btn-info" id="btn1" > Button1</button>-->

	<!--id'si btn1 olan her hangi bi tag tetiklendiğinde bu fonksiyon çalışır
		ve ortada bir kutu çıkar o kutunu içine de yazı yazılır.
	-->
	<script>
		$('#btn1').click(function () {
			swal("Site Kullanım Şartları","Sitemizde verdiğiniz mail adresi üzerinden bilgi ve haber e-postaları\
				  spam ölçüsüne varmadan gönderilmeye devam edilecektir.Eğer e-posta \
				  bülteninden çıkmak istiyorsanız mail ileti dizisini durdurabilirsiniz,\
				  şifre ve mail adresiniz şifrelenmiş formatta herhangi bir kullanıcının\
				  görmeyeceği şekilde veri tabanınımızda saklanmaktadır.");
		});
	</script>
</section>

