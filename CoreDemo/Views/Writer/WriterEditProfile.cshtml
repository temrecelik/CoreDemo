@model  EntityLayer.Concrete.Writer

@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

 @using (Html.BeginForm("WriterEditProfile","Writer",FormMethod.Post))
        {
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Düzenle</h4>
            <br />
                <div class="form-group">

                    @*idyi hidden ile alınca viewde çıkmıyo ancak veritabanında bu id'ye göre yazıyors*@
                    @Html.HiddenFor(x => x.WriterId, new { @class = "form-control" })
                </div>

       
                <div class="form-group">
					<h2> <label for="exampleInputName1">Ad Soyad</label></h2>
                    @Html.TextBoxFor(x => x.WriterName,new {@class ="form-control"} )
                </div>

                <br />     <br />

                <div class="form-group">
					<h2> <label for="exampleInputEmail3">Mail Adresiniz</label></h2>
					@Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
                </div>

                <br />     <br />

                <div class="form-group">
					<h2><label for="exampleInputPassword4">Yeni Şifre</label></h2>
                    @Html.PasswordFor(x => x.WriterPassword, new { @class = "form-control" })
                </div>

              @*   <br />     <br />

                <div class="form-group">
					<h2>   <label>Fotoğraf Güncelle</label> </h2>

                    <input type="file" name="img[]" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-outline-warning" type="button">Karşıdan Yükle</button>
                        </span>
                    </div>
                </div> *@

                <div class="form-group">
                    <h2> <label for="exampleInputEmail3">Fotoğraf Ekle</label></h2>
                    @Html.TextBoxFor(x => x.WriterImage, new { @class = "form-control" })
                </div>

                <br />     <br />

                <div class="form-group">
					<h2>   <label for="exampleTextarea1">Hakkında</label>  </h2>
                    @Html.TextAreaFor(x => x.WriterAbout,10,10, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-outline-success mr-2">Güncelle</button>
                <button class="btn btn-light">İptal Et</button>
          
			 
        </div>

		</div>
			
	</div>
