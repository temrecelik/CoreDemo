@*User panelinde anasayfada-dashboarda tüm yazılan blogların categorylerin puanlarını tabloda getirdik*@

@using EntityLayer.Concrete 
@model List<Category>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">En Beğenilen Bloglar Hangi Kategoride</h4>
                <br />
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
								<th>Kategori Adı</th>
								<th>Puanlandırma</th>
							</tr>
						</thead>

						<tbody>
                            @foreach(var item in Model)
                            {
                                
                           
                            <tr>
                               
                                <td>@item.CategoryName</td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar bg-gradient-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </td>
                            </tr>
							}
						</tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

