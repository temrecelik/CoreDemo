<!DOCTYPE html>
<html lang="zxx">



<body>

	


	<!--//banner-->
	<section class="banner-bottom">
		<!--/blog-->
		<div class="container">
			<div class="row">
				<!--left-->
				<div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">

					<!--blogları çektiğimiz yer-->
					@foreach (var item in Model)
					{


					<div class="blog-grid-top">
						<div class="b-grid-top">
							<div class="blog_info_left_grid">
								<a href="single.html">
									<img src="~/CoreBlogTema/images/b1.jpg" class="img-fluid" alt="">
								</a>
							</div>
							<div class="blog-info-middle">
								<ul>
									<li>
										<a href="#">
												<i class="far fa-calendar-alt"></i>@item.BlogContent.Substring(0, item.BlogContent.Substring(0, 130).LastIndexOf(""))...
											</a>
									</li>
									<li class="mx-2">
										<a href="#">
											<i class="far fa-thumbs-up"></i> 0 Beğeni</a>
									</li>
									<li>
										<a href="#">
											<i class="far fa-comment"></i>0 Yorum</a>
									</li>
									
								</ul>
							</div>
						</div>

						<h3>
							<a href="single.html">@item.BlogTitle </a>
						</h3>
						<p>
							@item.BlogContent
						</p>
						<a href="/Blog/Index	" class="btn btn-primary read-m">Blog Listesi</a>
					</div>
					}
					

				<!--Blogların devamını oku dediğimizde bizi blog/BlogReadAll/id
					sayfasını atıyordu bunu Blog Controllerde yazdık ve Viewini oluşturduk
					blog controllerındaki BlogReadAll fonksiyonundaki id paremetresini 
					ViewBag ile kaydettik ve kaydı aşağıda CommentListByBlog.cs ViewComponentine
					gönderdik Artık yorumları BlogIdsine  göre çekebileceiğiz
					Yani Component/CommentListByBlog.cshtml viewinda tüm yorumlar foreachle
						gezilir ancak gönderilen id ile eşleşen veriler görünür.Bunu 
						CommentListByBlog.cs parametresi id olan fonksiyonu göre yapar.

					-->
					
						@await Component.InvokeAsync("CommentListByBlog",new {id=ViewBag.i})
					
					
					@*await Html.PartialAsync("~/Views/Comment/CommentListByBlog.cshtml")*@
					
					@await Html.PartialAsync("~/Views/Comment/PartialAddComment.cshtml")

				</div>

				<!--//left-->
				<!--right-->
				<aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
					<div class="right-blog-info text-left">

						@await Html.PartialAsync("~/Views/NewsLetter/SubscribeMail.cshtml")
						

						<!-- blog/BlogReadAll sayfasınında kategorilerin listelendiği kısım
							 shareddaki  Categorylist ViewComponentinde
						-->
						@await Component.InvokeAsync("CategoryList")


						@*Yazarın diğer yazıları kısmı buradan Componentden Çekilecek  WriterLastBlog*@
						@await Component.InvokeAsync("WriterLastBlog")

						<div class="single-gd my-5 tech-btm">
							<h4>Our Progress</h4>
							<div class="progress">
								<div class="progress-bar progress-bar-striped" role="progressbar" style="width: 10%" aria-valuenow="10" aria-valuemin="0"
								    aria-valuemax="100"></div>
							</div>
							<div class="progress">
								<div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0"
								    aria-valuemax="100"></div>
							</div>
							<div class="progress">
								<div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0"
								    aria-valuemax="100"></div>
							</div>
							<div class="progress">
								<div class="progress-bar progress-bar-striped bg-warning" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0"
								    aria-valuemax="100"></div>
							</div>
							<div class="progress">
								<div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0"
								    aria-valuemax="100"></div>
							</div>
						</div>
						<div class="single-gd tech-btm">
							<h4>Son Eklenen Post</h4>
							<div class="blog-grids">
								<div class="blog-grid-left">
									<a href="single.html">
										<img src="~/CoreBlogTema/images/b1.jpg" class="img-fluid" alt="">
									</a>
								</div>
								<div class="blog-grid-right">

									<h5>
										<a href="single.html">Pellentesque dui, non felis. Maecenas male</a>
									</h5>
								</div>
								<div class="clearfix"> </div>
							</div>
						</div>
					</div>

				</aside>
				<!--//right-->
			</div>
		</div>
	</section>
</body>

</html>