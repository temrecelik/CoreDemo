@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "EditBlog";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1 style="color: green;">Blog Düzenle </h1>

<br />

@using(Html.BeginForm("EditBlog","Blog", FormMethod.Post))
{
    @Html.Label("Blog ID", "Blog ID", new { @style = "color: orange;" })
    @Html.TextAreaFor(x => x.BlogID , new {@class="form-control"})

    <br />

    @Html.Label("Blog Tittle", "Blog Tittle", new { @style = "color: orange;" })
    @Html.TextAreaFor(x => x.BlogTitle, new { @class = "form-control" })

    <br />


    @Html.Label("Blog Thumbnail Url", "Blog Thumbnail Url", new { @style = "color: orange;" })
    @Html.TextAreaFor(x => x.BlogThumbnailImage, new { @class = "form-control" })


    <br />

    @Html.Label("Blog İamge", "Blog İamge", new { @style = "color: orange;" })
    @Html.TextAreaFor(x => x.BlogImage, new { @class = "form-control" })


    <br />

    @Html.Label("Blog Kategorisi", "Blog Kategorisi", new { @style = "color: orange;" })
    @Html.TextAreaFor(x => x.CategoryID, new { @class = "form-control" })


    <br />

    @Html.Label("Blog İçereiği", "Blog Kategorisi", new { @style = "color: orange;" })
    @Html.TextAreaFor(x => x.BlogContent,10,10, new { @class = "form-control" })

    <br />

    <button class="btn btn-outline-success">Güncelle</button>


}
